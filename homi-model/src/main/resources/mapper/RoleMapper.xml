<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.homi.model.dao.mapper.RoleMapper">
    <resultMap type="com.homi.model.dao.entity.Role" id="RoleMap">
        <result property="id" column="id" jdbcType="INTEGER"/>
        <result property="name" column="name" jdbcType="VARCHAR"/>
        <result property="code" column="code" jdbcType="VARCHAR"/>
        <result property="status" column="status" jdbcType="INTEGER"/>
        <result property="deleted" column="del_flag" jdbcType="INTEGER"/>
        <result property="createBy" column="create_by" jdbcType="INTEGER"/>
        <result property="createTime" column="create_time" jdbcType="TIMESTAMP"/>
        <result property="updateBy" column="update_by" jdbcType="INTEGER"/>
        <result property="updateTime" column="update_time" jdbcType="TIMESTAMP"/>
        <result property="remark" column="remark" jdbcType="VARCHAR"/>
    </resultMap>

    <select id="selectRolePage" resultType="com.homi.model.vo.role.RoleVO">
        SELECT r.id,
        r.name,
        r.code,
        r.status,
        r.create_by,
        r.create_time,
        r.remark
        FROM role r
        <where>
            <if test="query.name != null and query.name != ''">
                AND r.name = #{query.name}
            </if>
            <if test="query.code != null and query.code != ''">
                AND r.code = #{query.code}
            </if>
            <if test="query.status != null">
                AND r.status = #{query.status}
            </if>
            <!-- 可以根据需要添加其他条件 -->
            and deleted = 0
        </where>
        GROUP BY r.id
    </select>
</mapper>
